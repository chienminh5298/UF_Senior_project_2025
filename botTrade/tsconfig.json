{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "." /* Specify the base directory to resolve non-relative module names. */,
    "outDir": "./dist",
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
}